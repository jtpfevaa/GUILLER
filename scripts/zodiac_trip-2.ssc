    ["Sadalsuud", "Acuario"],
    ["Alrescha", "Piscis"]
];

for (var i = 0; i < destinations.length; i++) {
    var star = destinations[i][0];
    var constellation = destinations[i][1];

    // Acercarse a la estrella principal de la constelaci√≥n usando setView
    core.debug("Viajando a " + constellation);
